<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
        card_view:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/listview_margin">


        <LinearLayout
            android:background="@drawable/frame_rounded"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_width="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@color/buttonColor">


                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/icon"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_height="121dp"
                    android:layout_width="match_parent" />

                <com.accorpa.sawah.custom_views.CustomCheckBox
                    android:id="@+id/like_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/heart"
                    android:layout_gravity="bottom"/>

                <LinearLayout
                    android:id="@+id/special_place_tag"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/special_tag_layer"
                    android:orientation="horizontal">
                </LinearLayout>


            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_height="80dp"
                android:gravity="center">

                <com.accorpa.sawah.custom_views.CustomTextView
                    android:id="@+id/place_title_ar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="dsdsdggggggggggggggggggggggggggggggggggg\ngggggg" />


                <com.accorpa.sawah.custom_views.CustomTextView
                    android:id="@+id/place_title_en"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textAlignment="center"
                    android:textColor="@color/buttonColor"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="sdsd\nsds" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>

