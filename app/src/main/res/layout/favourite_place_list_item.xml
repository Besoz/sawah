<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_rounded"
        android:layout_margin="@dimen/listview_margin"
        android:orientation="vertical">

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/yellow_progress_dialog_background">


            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/icon"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_height="121dp"
                android:layout_width="match_parent" />



        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_height="80dp"
            android:gravity="center">

            <com.sawah.sawah.custom_views.CustomTextView
                android:id="@+id/place_title_ar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="dsdsdggggggggggggggggggggggggggggggggggg\ngggggg" />


            <com.sawah.sawah.custom_views.CustomTextView
                android:id="@+id/place_title_en"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textAlignment="center"
                android:textColor="@color/buttonColor"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="sdsd\nsds" />

        </LinearLayout>



    </LinearLayout>

    <com.sawah.sawah.custom_views.CustomCheckBox
        android:id="@+id/like_button"
        android:background="@drawable/delete"
        android:layout_gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="visible"/>

