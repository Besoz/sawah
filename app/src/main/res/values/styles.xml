<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="colorControlNormal">@color/textColor</item>
        <item name="colorControlActivated">@color/textColor</item>
        <!--<item name="colorControlHighlight">@color/textColor</item>-->
        <!--<item name="android:textColorHint">@color/textColor</item>-->

        <!--<item name="android:textColor">@color/textColor</item>-->

        <!--<item name="android:alertDialogTheme">@style/sawahAlertDialogTheme</item>-->

    </style>

    <style name="sawahAlertDialogTheme">
        <item name="android:colorBackground">
            @color/buttonColor
        </item>
    </style>
    <style name="Theme.AppCompat.NoActionBar.AlertLight" parent="Theme.AppCompat.NoActionBar">
        <item name="md_dark_theme">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/textColor</item>
        <item name="colorControlActivated">@color/textColor</item>

    </style>

    <style name="AutoCompleteTextLabel" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/textColor</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/textColor</item>
        <item name="colorControlNormal">@color/textColor</item>
        <item name="colorControlActivated">@color/textColor</item>

        <item name="android:textColor">@color/textColor</item>

    </style>

    <style name="myTextAppearance.Design.Hint" parent="TextAppearance.Design.Hint">

        <item name="android:textColorHint">@color/textColor</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/textColor</item>
        <item name="colorControlNormal">@color/textColor</item>
        <item name="colorControlActivated">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>

    </style>

    <style name="myAutoCompleteTextLabel" parent="">

        <item name="android:textColorHint">@color/textColor</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/textColor</item>
        <item name="colorControlNormal">@color/textColor</item>
        <item name="colorControlActivated">@color/textColor</item>
        <item name="android:fontFamily">TheSansArabic</item>
        <item name="android:textColor">@color/textColor</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Transparent dialog -->
        

    <style name="TransparentProgressDialog" parent="Animation.AppCompat.Dialog">
                
        <item name="android:windowFrame">@null</item>
                
        <item name="android:windowBackground">@android:color/transparent</item>
                
        <item name="android:windowIsFloating">true</item>
                
        <item name="android:windowContentOverlay">@null</item>
                
        <item name="android:windowTitleStyle">@null</item>
                
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
                
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
                
        <item name="android:backgroundDimEnabled">true</item>
                
        <item name="android:background">@android:color/transparent</item>
            
    </style>

    <style name="MyBottomSheetStyle" parent="@style/BottomSheet">
        <item name="bottom_sheet_title_text_appearance">@style/TitleAppearance</item>
        <item name="bottom_sheet_list_text_appearance">@style/ListAppearance</item>
        <item name="bottom_sheet_grid_text_appearance">@style/GridAppearance</item>
    </style>

    <style name="TitleAppearance" parent="BottomSheet.Title.TextAppearance">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ListAppearance" parent="BottomSheet.ListItem.TextAppearance">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GridAppearance" parent="BottomSheet.GridItem.TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

</resources>


